{
  "name": "@commercelayer/cli-core",
  "version": "3.8.2",
  "main": "lib/cjs/index.js",
  "types": "lib/cjs/index.d.ts",
  "module": "lib/esm/index.js",
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "lintspec": "eslint ./specs/ --ext .spec.ts",
    "lint:fix": "eslint src --fix",
    "build": "rm -rf lib && tsc -b tsconfig.json tsconfig.esm.json --verbose",
    "start": "ts-node src/index.ts",
    "prepare": "npm run build",
    "test": "jest",
    "coverage": "jest --coverage",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "postbuild": "minimize-js lib"
  },
  "keywords": [
    "ecommerce",
    "jamstack",
    "commercelayer"
  ],
  "author": "Pierluigi Viti <pierluigi@commercelayer.io>",
  "license": "MIT",
  "description": "Commerce Layer Javascript CLI core lib",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-typescript": "^7.21.5",
    "@commercelayer/eslint-config-ts": "^1.0.0",
    "@size-limit/preset-small-lib": "^6.0.4",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "minimize-js": "^1.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@commercelayer/js-auth": "^2.3.0",
    "@oclif/core": "^2.8.5",
    "axios": "1.4.0",
    "chalk": "^4.1.2",
    "jsonwebtoken": "^8.5.1",
    "update-notifier-cjs": "^5.1.6"
  },
  "repository": "github:commercelayer/commercelayer-cli-core",
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "lib",
      "limit": "350 kB",
      "webpack": false
    }
  ]
}
