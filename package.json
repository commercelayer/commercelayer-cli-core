{
  "name": "@commercelayer/cli-core",
  "version": "5.0.0-oclif3.7",
  "author": "Pierluigi Viti <pierluigi@commercelayer.io>",
  "license": "MIT",
  "description": "Commerce Layer Javascript CLI core lib",
  "main": "lib/cjs/index.js",
  "types": "lib/cjs/index.d.ts",
  "module": "lib/esm/index.js",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "lintspec": "eslint ./specs/ --ext .spec.ts",
    "lint:fix": "eslint src --fix",
    "build": "rm -rf lib && tsc -b tsconfig.json tsconfig.esm.json --verbose",
    "start": "ts-node src/index.ts",
    "prepare": "npm run build",
    "test": "jest --passWithNoTests",
    "test-local": "ts-node test/spot.ts",
    "coverage": "jest --coverage",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "postbuild": "minimize-js lib"
  },
  "keywords": [
    "ecommerce",
    "jamstack",
    "commercelayer"
  ],
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=20.10.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@commercelayer/eslint-config-ts": "^1.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@size-limit/preset-small-lib": "^6.0.4",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "minimize-js": "^1.4.0",
    "oclif": "^4.4.19",
    "semantic-release": "^23.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@commercelayer/js-auth": "^4.2.1",
    "@oclif/core": "^3.19.7",
    "axios": "^1.6.7",
    "chalk": "^4.1.2",
    "jsonwebtoken": "^9.0.2",
    "update-notifier-cjs": "^5.1.6"
  },
  "repository": "github:commercelayer/commercelayer-cli-core",
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "lib",
      "limit": "350 kB",
      "webpack": false
    }
  ]
}
